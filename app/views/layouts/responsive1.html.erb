    </nav>
    <h1>BiH OTC Curriculum</h1>
    <section id="content_main">
      <h2>Translations Section</h2>
      <%= yield %>
    </section>
    <footer id="footer">
      <a href="http://feeds.feedburner.com/TayloredWebSites" rel="alternate" type="application/rss+xml"><img src="http://www.feedburner.com/fb/images/pub/feed-icon16x16.png" alt="Subscribe in a Reader" style="vertical-align:middle;border:0"/></a>&nbsp;<a href="http://feeds.feedburner.com/TayloredWebSites" rel="alternate" type="application/rss+xml" class="nowrap">Subscribe in a reader</a>
    </footer>
  </body>
</html>
